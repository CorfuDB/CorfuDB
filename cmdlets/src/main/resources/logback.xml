<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="std" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %date{yyyy-MM-dd'T'HH:mm:ss.SSSXXX, UTC} | %-5level | %thread | %msg%n%xException
            </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="std"/>
    </root>
</configuration>